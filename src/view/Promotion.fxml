<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="rootPane" stylesheets="@../resources/styles/promotion.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PromotionController">
   <center>
      <HBox prefHeight="152.0" prefWidth="325.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnQueen" mnemonicParsing="false" onAction="#handleBtnQueen">
               <graphic>
                  <ImageView fx:id="queen" fitHeight="128.0" fitWidth="147.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/img/normal/black_Queen.png" />
                     </image></ImageView>
               </graphic>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnRook" mnemonicParsing="false" onAction="#handleBtnRook">
               <graphic>
                  <ImageView fx:id="rook" fitHeight="128.0" fitWidth="147.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/img/normal/black_Bishop.png" />
                     </image></ImageView>
               </graphic>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnBishop" mnemonicParsing="false" onAction="#handleBtnBishop">
               <graphic>
                  <ImageView fx:id="bishop" fitHeight="128.0" fitWidth="147.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/img/normal/black_Knight.png" />
                     </image></ImageView>
               </graphic>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnKnight" mnemonicParsing="false" onAction="#handleBtnKnight">
               <graphic>
                  <ImageView fx:id="knight" fitHeight="128.0" fitWidth="147.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/img/normal/black_Rook.png" />
                     </image></ImageView>
               </graphic>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </center>
</BorderPane>
