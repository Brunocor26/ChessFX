<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="menu" prefHeight="500.0" prefWidth="800.0" styleClass="menu" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuController">

    <top>
        <Label id="title-label" text="XADREZ" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <StackPane alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT">
            <VBox alignment="CENTER" maxWidth="350" prefWidth="250.0" spacing="20.0" styleClass="menu-card">
                
                <HBox fx:id="menuItem1" alignment="CENTER_LEFT" spacing="10" styleClass="menu-item">
                    <Label id="arrow1" fx:id="arrow1" alignment="CENTER" minWidth="32.0" text="➜">
                        <font>
                            <Font size="22.0" />
                        </font>
                    </Label>
                    <Button fx:id="jogarIA" onAction="#handleJogarIA" prefHeight="45.0" prefWidth="200.0" styleClass="btn" text="Jogo vs IA">
                  <font>
                     <Font size="15.0" />
                  </font></Button>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                </HBox>
                
                <HBox fx:id="menuItem2" alignment="CENTER_LEFT" spacing="10" styleClass="menu-item">
                    <Label id="arrow2" fx:id="arrow2" alignment="CENTER" minWidth="32.0" text="➜">
                        <font>
                            <Font size="22.0" />
                        </font>
                    </Label>
                    <Button fx:id="jogarLocal" onAction="#handleJogarLocal" prefHeight="45.0" prefWidth="200.0" styleClass="btn" text="Jogo Local">
                  <font>
                     <Font size="15.0" />
                  </font></Button>
               <VBox.margin>
                  <Insets right="25.0" />
               </VBox.margin>
                </HBox>
                <HBox fx:id="menuItem3" alignment="CENTER_LEFT" spacing="10" styleClass="menu-item">
                    <Label id="arrow3" fx:id="arrow3" alignment="CENTER" minWidth="32.0" text="➜">
                        <font>
                            <Font size="22.0" />
                        </font>
                    </Label>
                    <Button fx:id="opcoes" onAction="#handleOpcoes" prefHeight="45.0" prefWidth="200.0" styleClass="btn" text="Opções">
                  <font>
                     <Font size="15.0" />
                  </font></Button>
               <VBox.margin>
                  <Insets right="25.0" />
               </VBox.margin>
                </HBox>
                
                <HBox fx:id="menuItem4" alignment="CENTER_LEFT" spacing="10" styleClass="menu-item">
                    <Label id="arrow4" fx:id="arrow4" alignment="CENTER" minWidth="32.0" text="➜">
                        <font>
                            <Font size="22.0" />
                        </font>
                    </Label>
                    <Button fx:id="sair" onAction="#handleSair" prefHeight="45.0" prefWidth="200.0" styleClass="btn" text="Sair">
                  <font>
                     <Font size="15.0" />
                  </font></Button>
               <VBox.margin>
                  <Insets right="25.0" />
               </VBox.margin>
                </HBox>
            <StackPane.margin>
               <Insets />
            </StackPane.margin>
            </VBox>
        </StackPane>
    </center>
   <left>
      <ImageView fx:id="imgReiPreto" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../resources/img/normal/white_King.png" />
         </image>
      </ImageView>
   </left>
   <right>
      <ImageView fx:id="imgReiBranco" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../resources/img/normal/black_King.png" />
         </image>
      </ImageView>
   </right>
</BorderPane>
